{% extends 'modelBackoffice.html.twig' %}

{% block body %}
<div class="container-fluid m-1">
<h2 class="text-center mt-2 mb-5 p-4 text-white" style="background-color: #4b1348"> Back-office</h2>
 <div class="card-header font-weight text-center mt-5 mb-3 p-4">
         <p class="mb-4">Les prochaines réservations</p>
        
    <table class="table table-striped w-100">
        <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Pack</th>
            <th scope="col">Clients</th>
            <th scope="col">Ville</th>
            <th scope="col">Date</th>
        </tr>
        </thead>
        <tbody class="text-center">
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.pack.nom }}</td>
                <td>{{ reservation.user.nom }}</td>
                <td>{{ reservation.user.ville }}</td>
                <td>{{ reservation.date | date('d-m-Y')}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="card mt-5 mb-3 d-inline-flex w-50">
        <div class="card-header font-weight-bold bg-info text-center">
            Meilleurs clients
        </div>

        <div class="card-body">
            {% for client in clients %}
            <p class="card-text"> {{ client.nom }}  {{ client.prenom }} : {{ client.resaEff }} réservation(s)</p>
            <p class="card-text">  </p>
            {% endfor %}
        </div>

    </div>

    <div class="card mt-5 mb-3 d-inline-flex w-50">
        <div class="card-header font-weight-bold bg-info text-center">
            Meilleurs packs
        </div>

        <div class="card-body">
            {% for pack in packs %}
                <p class="card-text"> {{ pack.nom }}  : {{ pack.nbResa }} réservation(s)</p>
                <p class="card-text">  </p>
            {% endfor %}
        </div>

    </div>

</div>

    {# <a href="{{ path('affiche_packs') }}">packs</a> #}

{% endblock %}



{% block title %}
Back-Office
{% endblock %}

