{% extends 'modelBackoffice.html.twig' %}

{% block body %}


  
      
<div class="container-fluid">
    <h1 class="text-center mt-2 mb-2 p-4 text-white" style="background-color: #4b1348">Gestion des réservations</h1>
    {% for message in app.flashes('success') %}
        <div class="col-md-6 bg-secondary p-4 rounded mx-auto text-center text-white mb-3">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row justify-content-start">
        <div class="col-md-2 ml-3 rounded" style="background-color: #ffba08">
            <a class="btn text-white ml-1 my-2 " href="{{ path('verif_dispo') }}">Ajouter une nouvelle réservation</a>
        </div>
    </div>
    <table class="table table-striped m-2">
        <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Pack</th>
            <th scope="col">Prix</th>
            <th scope="col">Cients</th>
            <th scope="col">Date</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody class="text-center">
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.pack.nom }}</td>
                <td>{{ reservation.pack.prix }}€</td>
                <td>{{ reservation.user.username }}</td>
                <td>{{ reservation.date | date('d-m-Y')}}</td>
                <td><a href="{{ path('modif_reservation', {'id': reservation.id}) }}"><img src="{{ asset('images/pencil.png') }}" alt="modifier"></a></td>
                <td><a href="{{ path('suppr_reservation', {'id': reservation.id}) }}"><img src="{{ asset('images/delete.png') }}" alt="supprimer"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
