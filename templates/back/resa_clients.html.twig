{% extends 'modelBackoffice.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="col-md-6 bg-secondary p-4 rounded mx-auto text-center text-white mb-3">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container-fluid">
      <h1 class="text-center mt-2 mb-2 p-4 text-white" style="background-color: #4b1348">Détail des réservations</h1>
 
    <table class="table table-striped text-center w-50 mt-4">
        <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Pack</th>
            <th scope="col">Date</th>

        </tr>
        </thead>
        <tbody class="text-center">
        {% for reservation  in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.pack.nom }}</td>
                <td>{{ reservation.date | date('d-m-Y')  }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block title %}

{% endblock %}

