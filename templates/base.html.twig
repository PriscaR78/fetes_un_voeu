<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>
      {% block title %}FETES UN VOEU !{% endblock %}
    </title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta name="description" content="Le meilleur du service évènementiel familial">
      <meta name="author" content="Fêtes un voeu, au service de vos festivités">
      <title>FETES UN VOEU</title>

      <!-- Bootstrap core CSS -->
      <link href={{asset('assets/css/bootstrap.min.css')}} rel="stylesheet">
      <link href={{asset('assets/css/style.css')}} rel="stylesheet">
      <link href={{asset('assets/css/bootstrap.bundle.js')}} rel="stylesheet">

      <!-- Custom styles for this template -->
      <link href={{asset('assets/css/carousel.css')}} rel="stylesheet">
      <style>
        .bd-placeholder-img {
          font-size: 1.125rem;
          text-anchor: middle;
          -webkit-user-select: none;
          -moz-user-select: none;
          -ms-user-select: none;
          user-select: none;
        }

        @media(min-width: 768px) {
          .bd-placeholder-img-lg {
            font-size: 3.5rem;
          }
        }
      </style>

    {% endblock %}
  </head>
  <body>

    <header>
      <div class="container">
        <nav class="d-flex navbar-default navbar-expand-md fixed-top p-3 ">
          <div>
            <a href="/">
              <img src={{asset('images/imagesUpload/logo/logo_fetes_un_voeu.png')}} alt="Logo fêtes un voeu" width="125"></img>
            </a>
          </div>
          <div>
            <a class="navbar-brand mt-4 ml-5" href="/">Fêtes un voeu<br>...au service de vos festivités
            </a>
          </div>

          <button class="navbar-toggler bg-dark" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <hr>

          <!-- Collapse button -->

          <div class="collapse navbar-collapse container-fluid" id="navbarSupportedContent1">
            <ul class="navbar-nav w-100 justify-content-md-end" style="">
              <li class="nav-item active">
                <a class="nav-link mr-2" href="/">Accueil<span class="sr-only">(current)</span>
                </a>
              </li>

              <li class="nav-item active mr-2">
                <a class="nav-link" href="#prestations">Nos prestations<span class="sr-only">(current)</span>
                </a>
              </li>
              <li class="nav-item active mr-2">
                <a class="nav-link" href="#galerie">Galerie<span class="sr-only">(current)</span>
                </a>
              </li>

              <li class="nav-item active mr-2">
                <a class="nav-link" href="#avis">Avis<span class="sr-only">(current)</span>
                </a>
              </li>

              <li class="nav-item active mr-2">
                <a class="nav-link" href="#contact">Contact<span class="sr-only">(current)</span>
                </a>
              </li>

              <li class="nav-item active mr-5">
                <a class="nav-link" href="{{ path('verif_dispo')}}">Réservation<span class="sr-only">(current)</span>
                </a>
              </li>

              {% if app.user %}
                <div class="nav-item dropdown my-2 my-lg-0 mr-5">
                  <a class="dropdown-toggle btn btn-info mt-2" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.user.username }}

                  </a>
                  <div class="dropdown-menu shadow m-4" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{{ path('profil', {id:app.user.id}) }}">Profil</a>
                    {% if is_granted('ROLE_ADMIN') %}
                      <a class="dropdown-item" href="{{ path('backoffice') }}">Back-office</a>
                    {% endif %}

                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('logout') }}">Déconnexion</a>
                  </div>
                </div>
              {% else %}

                <a class="nav-link " href="{{path('login')}}">Connexion</a>
                <a class="nav-link " href="{{ path('inscription') }}">Inscription</a>
              {% endif %}

              <!-- Section: Social media -->

              <a href="https://www.facebook.com/fetesvosvoeux" target="blank"><img src="{{asset('/images/imagesUpload/icones/facebook.svg')}}" width="40em" height="40em" class="mr-2"></a>
              <a href="https://www.instagram.com/fetes_unvoeu/?hl=fr" target="blank"><img src="{{asset('/images/imagesUpload/icones/instagram-orange.svg')}}" width="40em" height="40em" class="mr-2"></a>
              <a href="https://github.com/PriscaR78/fetes_un_voeu" target="blank"><img src="{{asset('/images/imagesUpload/icones/github-border-dark.svg')}}" width="45em" height="45em" class="mr-5"></a>

              {# <li class="nav-item active mr-2">
					<a href=""><img class="bd-placeholder-img rounded-circle" width="50" height="50" src={{asset('/images/imagesUpload/icones/fem.jpeg')}} role="img" aria-label="profil">
					</a></img>
				 #}

            </ul>

          </div>
        </nav>
      </div>
    </header>
    <main role="main">

      <div id="myCarousel" class="carousel slide img-fluid mx-auto" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
          <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="bd-placeholder-img" width="auto" height="100%" src={{asset('/images/imagesUpload/ban-anniv-enfant.jpg')}} role="img">
            <rect width="auto" height="100%"></img>

          </div>
          <div class="carousel-item">
            <img class="bd-placeholder-img" width="auto" height="100%" src={{asset('/images/imagesUpload/ban-anniv-adulte.jpg')}} role="img">
            <rect width="auto" height="100%"></img>

          </div>

          <div class="carousel-item">
            <img class="bd-placeholder-img" width="100%" height="auto" src={{asset('/images/imagesUpload/ban-karaoke.jpg')}} role="img">
            <rect width="100%" height="auto"></img>

          </div>
          <div class="carousel-item">
            <img class="bd-placeholder-img" width="100%" height="auto" src={{asset('/images/imagesUpload/ban-soiree.jpg')}} role="img">
            <rect width="100%" height="auto"></img>

          </div>

        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span></a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span></a>
      </div>

      <div class="div-concept">
        <div class="w-70 text-center">
          <h1>Le concept de “Fêtes un voeu”</h1><br>
          <p class="concept">L'anniversaire de votre bambin arrive ?<br>
            Une fête de famille ?<br>
            Ou tout simplement envie de déguster un bon gâteau fait maison ?<br>
            Demandez-nous !<br>
            Fêtes un voeu, au service de vos festivités !</p>
        </div>
      </div><br>

      <div class="container">
        <!-- Marketing messaging and featurettes ================================================== -->
        <!-- Wrap the rest of the page in another container to center all the content. -->
        <div class="container marketing">

          {% block content %}{% endblock %}

        </div>

        <!-- Footer -->
        <footer class="text-center bg-light text-muted ">
          <!-- CONTACT -->
          <div class="mb-5 p-3 shadow m-4 ">
            <div class="align-content-center">
              <div>
                <h2 class="text-center bg-light" id="contact">Contactez-nous</h2>
              </div>

              <div class="container">
                <div class="row g-2">
                  <div class="col-md">
                    <div class="form-floating">
                      <input type="text" class="form-control" id="nom" value="" placeholder="Votre nom">

                    </div>
                  </div>
                  <div class="col-md">
                    <div class="form-floating">
                      <input type="text" class="form-control" id="prenom" value="" placeholder="Votre prénom">

                    </div>
                  </div>
                </div>

                <fieldset>
                  <div class="form-group">
                    <label for="email">Entrez votre mail</label>
                    <input type="email" class="form-control" id="email" placeholder="Votre e-mail">
                  </div>

                  <div class="form-group">
                    <label for="text">Votre message</label>
                    <textarea class="form-control" id="message" rows="3"></textarea>
                  </div>

                  <input class="mb-5" type="button" submit="Envoyer" value="Envoyer">
                </fieldset>
              </form>
            </div>
          </div>
          <hr>

          <!-- Section: Links -->
          <section class="">
            <div class="container text-center text-md-start mt-5">
              <!-- Grid row -->
              <div class="row mt-3">
                <!-- Grid column -->
                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                  <!-- Content -->
                  <h6 class="text-uppercase fw-bold mb-4">
                    FETES UN VOEU
                  </h6>
                  <p>
                    10 rue Paul DOUMER
                    <br>
                    78 130 LES MUREAUX
                  </p>

                </div>
                <!-- Section: Links -->
                <div class="col-md-2 col-lg-3 col-xl-3 mx-auto mb-4">
                  <h6 class="text-uppercase fw-bold mb-4">
                    Contact
                  </h6>
                  <p>contact@fetesunvoeu.fr<br>06 18 45 75 88 - 01 12 21 34 89
                  </p>
                </div>
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-4">

                  <h6 class="text-uppercase fw-bold mb-4">
                    Horaires d'ouverture
                  </h6>
                  <p>
                    Lundi à Samedi
                    <br>
                    9h - 18h30
                  </p>
                </div>
              </div>
              <div style="background-color:red;" width="100%">
                <img width="100%" src={{asset('/images/imagesUpload/carte_fuv_optimisee.jpg')}}></img>
              </div>

            </div>

          </section>

          <!-- Back to top button -->
          <button type="button" class="btn-floating btn-lg" id="btn-back-to-top">
            <i class="fas fa-arrow-up"></i>
          </button>

        </main>

        <!-- Copyright -->

        <div class="text-center p-4" style="background-color: #eddcf9">© 2021 Fêtes un voeu -
          <a class="text-reset fw-bold" href="/">
            Protection des données</a>
        </div>
      </footer>

      {% for message in app.flashes('success') %}
        <div class="col-md-6 bg-secondary p-4 rounded mx-auto text-center text-white mb-3">
          {{ message }}
        </div>
      {% endfor %}
      {% block body %}{% endblock %}

      {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script src={{asset('assets/js/bootstrap.bundle.js')}}></script>
        <script src="https://kit.fontawesome.com/e4895b9a2a.js" crossorigin="anonymous"></script>
      {% endblock %}
    </body>
  </html>
