{% extends 'modeleConnexion.html.twig' %}

{% block body %}
<div class="container mt-4">

    <h1 class="text-center p-4" style="background-color: #eddcf9">Mon profil</h1>

   <!-- Tableau d'affichage -->

    <div class="card w-100">
        <div class="card-header font-weight-bold text-center">
            Mes informations
        </div>
        <div class="card-body">
            <p class="card-text">Votre nom : {{ app.user.nom}} </p>
            <p class="card-text">Votre prénom : {{ app.user.prenom}} </p>
            <p class="card-text">Votre pseudo : {{ app.user.username}} </p>
            <p class="card-text">Votre adresse : {{ app.user.adresse}} </p>
            <p class="card-text">Votre code postal : {{ app.user.cp}} </p>
            <p class="card-text">Votre ville : {{ app.user.ville}} </p>
            <p class="card-text">Votre N° de téléphone : {{ app.user.telephone}} </p>

            <p class="card-text">Votre date de naissance : {{ app.user.birthday | date('d/m/Y')}} </p>
            <p class="card-text">Votre email : {{ app.user.email}} </p>
            <a href=" {{ path('modifprofil', {'id':app.user.id} )}} " class="btn btn-info mx-auto">Modifier</a>
        </div>
    </div>

</div>
<hr>
   <!-- Tableau d'affichage -->

<div class="container mt-4">
    <h2 class="text-center p-4" style="background-color: #eddcf9">Historique de vos réservations</h2>
    <table class="table table-striped w-100 text-center">
        <thead class="thead-light w-100">
        <tr>
           
            <th scope="col">Pack</th>
            <th scope="col">Prix</th>
            <th scope="col">Date</th>
                    </tr>
        </thead>
        <tbody class="text-center">
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.pack.nom }}</td>
                <td>{{ reservation.pack.prix }}</td>
                <td>{{ reservation.date | date('d-m-Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>

{% endblock %}
