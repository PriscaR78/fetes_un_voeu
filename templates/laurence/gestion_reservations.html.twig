{% extends 'backoffice.html.twig' %}

{% block body %}
    <h1 class="text-center mb-5 p-4" style="background-color: #eddcf9">Gestion des réservations</h1>
    {% for message in app.flashes('success') %}
        <div class="col-md-6 bg-secondary p-4 rounded mx-auto text-center text-white mb-3">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row justify-content-end">
        <div class="col-md-3">
            <a class="btn btn-info my-3 " href="{{ path('verif_dispo') }}">Ajouter une nouvelle réservation</a>
        </div>
    </div>
    <table class="table table-striped">
        <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Pack</th>
            <th scope="col">Prix</th>
            <th scope="col">Cients</th>
            <th scope="col">Date</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody class="text-center">
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.pack.nom }}</td>
                <td>{{ reservation.pack.prix }}€</td>
                <td>{{ reservation.user.username }}</td>
                <td>{{ reservation.date | date('d-m-Y')}}</td>
                <td><a href=""><img src="{{ asset('images/pencil.png') }}" alt="modifier"></a></td>
                <td><a href="{{ path('suppr_reservation', {'id': reservation.id}) }}"><img src="{{ asset('images/delete.png') }}" alt="supprimer"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
